@model IEnumerable<EventViewModel>

@{
    ViewBag.Title = "Watchlist";
}

<div class="text-center row">
    @foreach (var entity in Model)
    {
            <div class="card col-4" style="width: 20rem;">
                <img class="card-img-top" style="width: 18rem;"
             src="@entity.ImageUrl" alt="Event Image">
                <div class="card-body">

                    <h5 class="card-title mt-1">@entity.Name</h5>
                    <p class="mb-0">Organiser: @entity.EventOrganiser
                        <p class="mb-0">Likes: @entity.Likes</p>
                    <p>Category: @entity.Category</p>
                </div>

                <form class="input-group-sm" asp-route-entityId="@entity.Id" asp-controller="Event" asp-action="LikeEvent" method="post">
                    <input type="submit" value="Details" class="fs-6 btn btn-success mb-3 p-2" />
                </form>
            </div>
    }
</div>